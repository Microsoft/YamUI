{
  "name": "yamui",
  "description": "UI component framework for Yammer.com",
  "version": "0.0.22",
  "style": "dist/yamui-base.css",
  "license": "MIT",
  "dependencies": {
    "classnames": "=2.2.5",
    "core-decorators": "=0.20.0",
    "normalize.css": "=6.0.0",
    "office-ui-fabric-react": "=5.1.0"
  },
  "devDependencies": {
    "@storybook/addon-options": "=3.2.3",
    "@storybook/react": "=3.2.3",
    "@types/classnames": "=0.0.32",
    "@types/enzyme": "=2.8.5",
    "@types/jest": "=20.0.1",
    "@types/node": "=7.0.12",
    "@types/prop-types": "=15.5.1",
    "@types/react": "=16.0.2",
    "@types/react-dom": "=15.5.2",
    "@types/storybook__react": "=3.0.3",
    "autoprefixer": "=6.5.1",
    "backstopjs": "=3.0.31",
    "chalk": "=1.1.3",
    "concurrently": "=3.4.0",
    "cpx": "=1.5.0",
    "css-loader": "=0.27.3",
    "enzyme": "=2.9.1",
    "eslint": "=4.8.0",
    "eslint-config-airbnb": "=15.1.0",
    "eslint-plugin-header": "=1.2.0",
    "eslint-plugin-import": "=2.7.0",
    "eslint-plugin-jsx-a11y": "=5.1.1",
    "eslint-plugin-react": "=7.4.0",
    "file-loader": "=0.11.1",
    "glob": "=7.1.1",
    "identity-obj-proxy": "=3.0.0",
    "jest": "=20.0.4",
    "jest-serializer-enzyme": "=1.0.0",
    "markdownlint-cli": "=0.3.1",
    "npm-run-all": "=4.0.2",
    "postcss": "=5.2.16",
    "postcss-cli": "=3.2.0",
    "postcss-import": "=9.1.0",
    "postcss-loader": "=1.3.3",
    "postcss-scss": "=0.4.1",
    "precss": "=1.4.0",
    "raw-loader": "=0.5.1",
    "react": "=15.5.4",
    "react-docgen": "=2.19.0",
    "react-docgen-displayname-handler": "=1.0.1",
    "react-docgen-typescript": "=1.0.2",
    "react-dom": "=15.5.4",
    "react-styleguidist": "=6.0.32",
    "react-test-renderer": "=15.5.4",
    "rimraf": "=2.6.1",
    "serve": "=5.1.4",
    "style-loader": "=0.16.1",
    "svgcomp": "=1.0.1",
    "svgo": "=0.7.2",
    "ts-jest": "=20.0.6",
    "ts-loader": "=3.1.0",
    "tslint": "=5.6.0",
    "tslint-config-airbnb": "=5.2.1",
    "tslint-react": "=3.2.0",
    "typescript": "=2.5.2",
    "webpack": "=3.8.1"
  },
  "peerDependencies": {
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "typescript": "^2.5.0"
  },
  "scripts": {
    "clean:build": "rimraf build/*",
    "clean:dist": "rimraf dist/*",
    "clean:docs": "rimraf build/docs/*",
    "clean": "run-p clean:build clean:dist",
    "build:css:global": "postcss src/css/index.css --output dist/yamui-base.css",
    "build:css:components": "postcss \"src/components/**/*.css\" --dir \"dist/components\" --base \"src/components\"",
    "build:ts:components": "tsc --project .",
    "build": "run-s clean:dist clean:build copy:** build:**",
    "test:eslint:root": "eslint \"./*.+(js|jsx)\"",
    "test:eslint:sources": "eslint \"+(src|config)/**/*.+(js|jsx)\"",
    "test:eslint": "run-p test:eslint:*",
    "test:tslint": "tslint --type-check --project tsconfig.json",
    "test:mdlint": "markdownlint README.md assets/README.md assets/Icons/README.md src/components/README.md",
    "test:unit": "jest --config config/jest/config.json",
    "test:visual:build": "run-s clean:docs docs:static:build:visualdiff",
    "test:visual:serve": "run-p docs:static:serve test:visual:test-and-stop",
    "test:visual:test-and-stop": "run-s --continue-on-error visual:test docs:static:stop",
    "test:visual": "run-s test:visual:build test:visual:serve",
    "test": "run-s build test:*",
    "watch:css:global": "postcss src/css/index.css --output dist/yamui-base.css --watch",
    "watch:css:components": "postcss \"src/components/**/*.css\" --dir \"dist/components\" --base \"src/components\" --watch",
    "watch:ts:components": "tsc --project . --watch",
    "watch": "run-p watch:**",
    "start:dev": "styleguidist server",
    "start:test": "jest --config config/jest/config.json --watchAll",
    "report:unit": "open \"build/jest/coverage/index.html\"",
    "report:visual": "backstop openReport --config config/backstop/config.js",
    "report": "run-p report:*",
    "docs:static:build": "styleguidist build",
    "docs:static:build:visualdiff": "styleguidist build --config styleguide.config.visualdiff.js",
    "docs:static:serve": "serve build/docs --port 5555 || true",
    "docs:static:stop": "pkill -f \"node_modules/.bin/serve build/docs\"",
    "svg:clean-build": "rimraf build/icons",
    "svg:clean-components": "rimraf src/components/Icon/icons/*.tsx",
    "svg:svgo": "svgo --folder=./assets/Icons --output=./build/icons --config=./.svgo.yml",
    "svg:generate": "svgcomp --dir=./build/icons/ --output=src/components/Icon/icons",
    "svg": "run-s svg:*",
    "visual:test": "backstop test --config config/backstop/config.js",
    "visual:approve": "backstop approve --config config/backstop/config.js",
    "prepublishOnly": "npm run build"
  }
}
